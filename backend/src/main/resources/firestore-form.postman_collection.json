{
  "info": {
    "name": "Firestore Form API",
    "description": "Coleção de testes para a API Spring Boot que persiste mensagens no Cloud Firestore.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Criar mensagem",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Maria\",\n    \"email\": \"maria@example.com\",\n    \"message\": \"Olá Cloud!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/messages",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "messages"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code é 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test(\"Resposta possui id\", function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property(\"id\");",
              "    pm.expect(jsonData.message).to.eql(\"Mensagem registrada com sucesso.\");",
              "});"
            ]
          }
        }
      ],
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ]
}

